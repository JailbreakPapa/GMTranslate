<Window x:Class="GMTranslate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMTranslate"
        xmlns:viewModels="clr-namespace:GMTranslate.ViewModels"
        mc:Ignorable="d"
        Title="GMTranslate" Height="450" Width="800">
    <Window.Resources>
        <ResourceDictionary Source="/AdonisUIDiction.xaml" />
    </Window.Resources>
    <Window.DataContext>
        <viewModels:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <ContentPresenter Content="{Binding CurrentViewModel}"/>
    </Grid>
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
</Window>
